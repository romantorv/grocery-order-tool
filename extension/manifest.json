{
  "manifest_version": 3,
  "name": "Grocery Ordering Helper",
  "version": "1.0.0",
  "description": "Automates adding grocery items to cart by fetching pending orders from the database",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "*://*.kingfoodmart.com/*",
    "*://localhost/*",
    "http://localhost:3000/*",
    "https://localhost:3000/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}